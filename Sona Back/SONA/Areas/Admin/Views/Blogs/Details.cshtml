@model DAL.Models.Blog

<div class="container">
    <div class="row justify-content-center py-5">
        <div class="col-10">
            <div class="d-flex justify-content-between">
                <a class="btn btn-success my-3" asp-area="Admin" asp-controller="Blogs" asp-action="Create">Create</a>
                <a class="btn btn-primary my-3" asp-area="Admin" asp-controller="Blogs" asp-action="Index">Cancel</a>
            </div>
            <table class="table table-dark table-striped">
                <thead>
                <tr>
                    <th >#</th>
                    <th >Image</th>
                    <th class="d-flex align-items-center">Title</th>
                    <th >Author</th>
                    <th >Tag</th>
                      <th>Actions</th>
                </tr>
                </thead>
                <tbody>
               
                <tr>
                    <th>@Model.Id</th>
                    <td style="width: 10%;">
                        <img class="img-fluid" src="~/uploads/blogs/@Model.Image" alt="room">
                    </td>
                    <td>@Model.Title</td>
                    <td>@Model.Author</td>
                    <td>@Model.Tag</td>
                    <td>
                        <a class="btn btn-warning" asp-area="Admin" asp-controller="Blogs" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                        <a class="btn btn-danger my-2" asp-area="Admin" asp-controller="Blogs" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                    </td>
                </tr>
                </tbody>
            </table>
            <div class="py-3 px-5">
                <h1>Content</h1>
                <hr>
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
</div>