<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
    <meta name="description" content=""/>
    <meta name="author" content=""/>
    <title>Dashboard - SB Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet"/>
    <link href="~/areas/admin/assets/css/styles.css" rel="stylesheet"/>
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
<nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark justify-content-between">
    <div>
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3 me-3" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Start Bootstrap</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0 ms-5" id="sidebarToggle" href="#!">
            <i class="fas fa-bars"></i>
        </button>
    </div>
    <!-- Navbar-->
    <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user fa-fw"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                </li>
            </ul>
        </li>
    </ul>
</nav>
<div id="layoutSidenav">
    <div id="layoutSidenav_nav">
        <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
            <div class="sb-sidenav-menu">
                <div class="nav">
                    <div class="sb-sidenav-menu-heading">Menu</div>
                    <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <div class="sb-nav-link-icon">
                            <i class="fas fa-tachometer-alt"></i>
                        </div>
                        Dashboard
                    </a>
                    <a class="nav-link" asp-area="Admin" asp-controller="Rooms" asp-action="Index">
                        <div class="sb-nav-link-icon">
                            <i class="fa-solid fa-door-open"></i>
                        </div>
                        Rooms
                    </a>
                    <a class="nav-link" asp-area="Admin" asp-controller="Blogs" asp-action="Index">
                        <div class="sb-nav-link-icon">
                            <i class="fa-solid fa-pen-fancy"></i>
                        </div>
                        Blogs
                    </a>
                    <a class="nav-link" asp-area="Admin" asp-controller="Comments" asp-action="Index">
                        <div class="sb-nav-link-icon">
                            <i class="fa-solid fa-comment"></i>
                        </div>
                        Comments
                    </a>
                    <a class="nav-link" asp-area="Admin" asp-controller="Contacts" asp-action="Index">
                        <div class="sb-nav-link-icon">
                            <i class="fa-solid fa-address-book"></i>
                        </div>
                        Contacts
                    </a>
                    <a class="nav-link" asp-area="Admin" asp-controller="Setting" asp-action="Index">
                        <div class="sb-nav-link-icon">
                            <i class="fa-solid fa-gear"></i>
                        </div>
                        Settings
                    </a>
                </div>
            </div>
            <div class="sb-sidenav-footer">
                <div class="small">Logged in as:</div>
                @User.Identity.Name
            </div>
        </nav>
    </div>
    <div id="layoutSidenav_content">
        @RenderBody()
    </div>
</div>
@RenderSection("CkEditor", required: false)
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="~/areas/admin/assets/js/scripts.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
<script src="~/areas/admin/assets/assets/demo/chart-area-demo.js"></script>
<script src="~/areas/admin/assets/assets/demo/chart-bar-demo.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
<script src="~/areas/admin/assets/js/datatables-simple-demo.js"></script>
</body>
</html>