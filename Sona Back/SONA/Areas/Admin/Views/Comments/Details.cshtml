@model DAL.Models.Comment

<div class="container">
    <div class="row justify-content-center py-5">
        <div class="col-10">
             <a class="btn btn-primary my-3" asp-area="Admin" asp-controller="Comments" asp-action="Index">Cancel</a>
            <table class="table table-dark table-striped">
                <thead>
                <tr>
                    <th >#</th>
                    <th >Fullname</th>
                    <th class="d-flex align-items-center">Email</th>
                    <th >Actions</th>
                </tr>
                </thead>
                <tbody>

                <tr>
                    <th>@Model.Id</th>
                    <td>@Model.FullName</td>
                    <td>@Model.Email</td>
                    <td>
                        <a class="btn btn-danger my-2" asp-area="Admin" asp-controller="Comments" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                    </td>
                </tr>
                </tbody>
            </table>
            <div class="py-3">
                <h1>Message</h1>
                <hr>
                <p>@Model.Message</p>
            </div>

        </div>
    </div>
</div>