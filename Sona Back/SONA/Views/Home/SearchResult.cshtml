@model List<DAL.Models.Room>
<title>Search Result</title>
<link rel="stylesheet" href="~/assets/pages/rooms/styles/rooms.style.css">
<!-- * Rooms -->
<section id="rooms">
    <div class="container py-5">
        <h1 class="text-center">Search Result</h1>
        <div class="bt-option mb-5 text-center">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <i class="fa-solid fa-angle-right"></i>
            <span>Search Result</span>
        </div>

        <div class="room-items">
            <div class="row">
                @if (Model.Count > 0)
                {
                    @foreach (var room in Model)
                    {
                        <div class="col-lg-4 col-md-6 px-3">
                            <div class="room-item">
                                <img
                                    src="~/uploads/rooms/@room.Image"
                                    alt="room"
                                    class="img-fluid"/>
                                <div class="ri-text">
                                    <h4>@room.Name</h4>
                                    <h3>@room.Price$<span>/Pernight</span></h3>
                                    <table>
                                        <tbody>
                                        <tr>
                                            <td class="r-o">Size:</td>
                                            <td>@room.Size ft</td>
                                        </tr>
                                        <tr>
                                            <td class="r-o">Capacity:</td>
                                            <td>Max persion @room.Capacity</td>
                                        </tr>
                                        <tr>
                                            <td class="r-o">Bed:</td>
                                            <td>@room.Bed</td>
                                        </tr>
                                        <tr>
                                            <td class="r-o">Services:</td>
                                            <td>@room.Services</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                    <a
                                        asp-controller="Room"
                                        asp-action="Details"
                                        asp-route-id="@room.Id"
                                        class="primary-btn">
                                        More Details
                                    </a
                                    >
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <h1 class="fs-1 my-5 text-center fw-bold">No result found!</h1>
                    </div>
                }
            </div>
        </div>
    </div>
</section>