<!-- * Hero -->
<section id="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 d-flex align-items-center pb-5 pb-lg-0">
                <div class="hero-text">
                    <h1>Sona A Luxury Hotel</h1>
                    <p>
                        Here are the best hotel booking sites, including recommendations
                        for international travel and for finding low-priced hotel rooms.
                    </p>
                    <a asp-controller="Room" asp-action="Index" class="primary-btn">Discover Now</a>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                <div class="booking-form rounded-0 shadow">
                    <h3>Booking Your Hotel</h3>
                    <form method="post">
                        <div class="check-date">
                            <label asp-for="ReservationVm.CheckIn">Check In:</label>
                            <input asp-for="ReservationVm.CheckIn" class="date-input"/>
                            <span asp-validation-for="ReservationVm.CheckIn" class="text-danger my-3 fw-bold"></span>
                        </div>
                        <div class="check-date">
                            <label asp-for="ReservationVm.CheckOut">Check Out:</label>
                            <input asp-for="ReservationVm.CheckOut" class="date-input"/>
                            <span asp-validation-for="ReservationVm.CheckOut" class="text-danger my-3 fw-bold"></span>
                        </div>
                        <div class="select-option">
                            <label asp-for="ReservationVm.GuestCount">Guests:</label>
                            <select asp-for="ReservationVm.GuestCount">
                                @for (int i = 1; i <= Model.Rooms.OrderBy(room => room.Capacity).ToList()[Model.Rooms.OrderBy(room => room.Capacity).ToList().Count - 1].Capacity; i++)
                                {
                                    <option value="@i">@i Adults</option>
                                }
                            </select>
                        </div>
                        <div class="select-option">
                            <label asp-for="ReservationVm.RoomCount">Room:</label>
                            <select asp-for="ReservationVm.RoomCount">
                                @for (int i = 1; i <= Model.Rooms.OrderBy(room => room.Count).ToList()[Model.Rooms.OrderBy(room => room.Count).ToList().Count - 1].Count; i++)
                                {
                                    <option value="@i">@i Room</option>
                                }

                            </select>
                        </div>
                        <button type="submit">Check Availability</button>
                    </form>
                    <div class="text-danger my-3 fw-bold" asp-validation-summary="All"></div>
                </div>
            </div>
        </div>
        <div class="hero-slider">
            <!-- Slider main container -->
            <div class="swiper hero-swiper">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <img
                            height="100%"
                            src="https://technext.github.io/sona/img/hero/hero-1.jpg"
                            alt="hero"/>
                    </div>
                    <div class="swiper-slide">
                        <img
                            height="100%"
                            src="https://technext.github.io/sona/img/hero/hero-2.jpg"
                            alt="hero"/>
                    </div>
                    <div class="swiper-slide">
                        <img
                            height="100%"
                            src="https://technext.github.io/sona/img/hero/hero-3.jpg"
                            alt="hero"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
