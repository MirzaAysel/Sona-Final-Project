<!-- * Room Section -->
<section id="room-section">
    <div class="container-fluid pt-5">
        <div class="room-items">
            <div class="row">

                @foreach (var room in Model.Rooms)
                {
                    <div class="col-lg-3 col-md-6 py-2 py-lg-0">
                        <div
                            class="room-item set-bg"
                            style="background-image: url('../uploads/rooms/@room.Image');">
                            <div class="hr-text">
                                <h3>@room.Name</h3>
                                <h2>@(room.Price - (room.Price - room.DiscountPrice))$<span>/Pernight</span></h2>
                                <table>
                                    <tbody>
                                    <tr>
                                        <td class="r-o">Size:</td>
                                        <td>@room.Size ft</td>
                                    </tr>
                                    <tr>
                                        <td class="r-o">Capacity:</td>
                                        <td>Max persion @room.Capacity</td>
                                    </tr>
                                    <tr>
                                        <td class="r-o">Bed:</td>
                                        <td>@room.Bed</td>
                                    </tr>
                                    <tr>
                                        <td class="r-o">Services:</td>
                                        <td>@room.Services</td>
                                    </tr>
                                    </tbody>
                                </table>
                                <a asp-controller="Room" asp-action="Details" asp-route-id="@room.Id" class="primary-btn">More Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- * TESTIMONIALS -->
<section id="testimonials">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Testimonials</span>
                    <h2>What Customers Say?</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="swiper testimonial__swiper">
                    <!-- Additional required wrapper -->
                    <div class="swiper-wrapper">
                        <!-- Slides -->
                        @foreach (var comment in Model.Comments)
                        {
                            if (!comment.IsContact)
                            {
                                <div class="swiper-slide">
                                    <div class="row">
                                        <div class="col-lg-8 offset-lg-2">
                                            <div class="ts-item text-center">
                                                <p>
                                                    @comment.Message
                                                </p>
                                                <div class="ti-author">
                                                    <h5>- @comment.FullName</h5>
                                                </div>
                                                <img
                                                    src="https://technext.github.io/sona/img/testimonial-logo.png"
                                                    alt=""/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <!-- If we need navigation buttons -->
                    <div class="swiper-button-prev d-none d-md-flex"></div>
                    <div class="swiper-button-next d-none d-md-flex"></div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- * Blogs -->
<section id="blogs">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Hotel News</span>
                    <h2>Our Blog &amp; Event</h2>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            @foreach (var blog in Model.Blogs)
            {
                <div class="col-lg-4">
                    <div
                        class="blog-item set-bg"
                        style="
                background-image: url('../uploads/blogs/@blog.Image');
              ">
                        <div class="bi-text">
                            <span class="b-tag">@blog.Tag</span>
                            <h4>
                                <a asp-controller="News" asp-action="Details" asp-route-id="@blog.Id">@blog.Title</a>
                            </h4>
                            <div class="b-time">
                                <i class="fa-regular fa-clock"></i> @blog.CreatedDate.ToString(CultureInfo.InvariantCulture).Substring(0, 10)
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>