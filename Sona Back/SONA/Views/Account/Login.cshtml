@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SONA.ViewModels.LoginVM

<link rel="stylesheet" href="~/assets/pages/login/styles/login.style.css">
<section id="login">
    <div class="container py-5">
        <h1 class="text-center">Login</h1>
        <div class="bt-option mb-5 text-center">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <i class="fa-solid fa-angle-right"></i>
            <span>Login</span>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-6">
                <form method="post">
                    <div class="input-group flex-column mb-3">
                        <label asp-for="Email">Email address</label>
                        <input
                          asp-for="Email"
                       
                            class="form-control rounded-0 w-100"/>
                        <span class="my-3 fw-bold text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="input-group flex-column mb-3">
                        <label asp-for="Password">Password</label>
                        <input
                           asp-for="Password"
                            class="form-control rounded-0 w-100"/>
                        <span class="my-3 fw-bold text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="input-group justify-content-between mb-3">
                        <div class="d-flex">
                            <input class="me-2" asp-for="RememberMe"/>
                            <label asp-for="RememberMe"> Remember Me</label>
                        </div>
                        <a href="#">Forgot Password</a>
                    </div>
                    <button type="submit" class="btn btn-warning rounded-0 w-100">Submit</button>
                </form>
                <div class="my-3 text-danger fw-bold" asp-validation-summary="ModelOnly"></div>
                <div class="mt-3">
                    <p>
                        Don't have an account?
                        <a asp-controller="Account" asp-action="Register">SignUp</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>