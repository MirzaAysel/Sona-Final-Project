@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SONA.ViewModels.RegisterVM

<link rel="stylesheet" href="~/assets/pages/signup/styles/signup.style.css">
<section id="signup">
    <div class="container py-5">
        <h1 class="text-center">SignUp</h1>
        <div class="bt-option mb-5 text-center">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <i class="fa-solid fa-angle-right"></i>
            <span>SignUp</span>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-6">
                <form method="post">
                    <div class="input-group flex-column mb-3">
                        <label asp-for="FirstName">Firstname</label>
                        <input
                            asp-for="FirstName"
                            class="form-control rounded-0 w-100"/>
                        <span class="my-3 fw-bold text-danger" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="input-group flex-column mb-3">
                        <label asp-for="LastName">Lastname</label>
                        <input
                            asp-for="LastName"
                            class="form-control rounded-0 w-100"/>
                        <span class="my-3 fw-bold text-danger" asp-validation-for="LastName"></span>
                    </div>
                    <div class="input-group flex-column mb-3">
                        <label asp-for="Email">Email address</label>
                        <input
                            asp-for="Email"
                            class="form-control rounded-0 w-100"/>
                        <span class="my-3 fw-bold text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="input-group flex-column mb-3">
                        <label asp-for="Password">Password</label>
                        <input
                            asp-for="Password"
                            class="form-control rounded-0 w-100"/>
                        <span class="my-3 fw-bold text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="input-group flex-column mb-3">
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <input
                            asp-for="ConfirmPassword"
                            class="form-control rounded-0 w-100"/>
                        <span class="my-3 text-danger fw-bold" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <button class="btn btn-warning rounded-0 w-100">Submit</button>
                </form>
                <div class="my-3 text-danger fw-bold" asp-validation-summary="ModelOnly"></div>
                <div class="mt-3">
                    <p>
                        Already have an account? <a asp-controller="Account" asp-action="Login">Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>