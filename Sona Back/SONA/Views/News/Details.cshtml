@using System.Globalization
@model DAL.Models.Blog
<title>News Details</title>
<link rel="stylesheet" href="~/assets/pages/News/styles/news-details.style.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
<section class="blog__details">
    <div style="background-image:url('../../uploads/blogs/@Model.Image');" class="camping">
        <span>@Model.Tag</span>
        <h2 class="mx-5">@Model.Title</h2>
        <div class="d-flex justify-content-center my-5">
            <div class="camping__items d-flex justify-content-center">
                <i class="bi bi-clock-fill"></i>
                <p class="mx-2">@Model.CreatedDate.ToString(CultureInfo.InvariantCulture).Substring(0, 10)</p>
            </div>
            <div class="camping__items d-flex justify-content-center mx-4">
                <i class="bi bi-person-fill"></i>
                <p class="mx-2 "> @Model.Author</p>
            </div>
        </div>
    </div>
</section>

<section class="blog__info my-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="info__title">
                    @Html.Raw(Model.Content)
                </div>
            </div>
        </div>
    </div>
</section>

<link rel="stylesheet" href="~/assets/pages/News/styles/news.style.css">
<section id="blogs">
    <div class="container py-3">
        <h2 class="my-3">Recommended</h2>
        <div class="row">
            @foreach (var blog in ViewBag.Data)
            {
                <div class="col-lg-4">
                    <div
                        class="blog-item set-bg"
                        style="
                background-image: url('../../uploads/blogs/@blog.Image');
              ">
                        <div class="bi-text">
                            <span class="b-tag">@blog.Tag</span>
                            <h4>
                                <a asp-controller="News" asp-action="Details" asp-route-id="@blog.Id">@blog.Title</a>
                            </h4>
                            <div class="b-time">
                                <i class="fa-regular fa-clock"></i> @blog.CreatedDate.ToString(CultureInfo.InvariantCulture).Substring(0, 10)
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>